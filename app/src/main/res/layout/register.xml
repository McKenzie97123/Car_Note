<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:id="@+id/registerLayout">
    <ImageView
            android:id="@+id/registerIcon"
            app:srcCompat="@drawable/carnote_sec_240"
            android:layout_width="340dp"
            android:layout_height="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/register_logo"/>
    <EditText
            android:id="@+id/registerEmail"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:hint="@string/type_your_email"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="160dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:importantForAutofill="no"/>
    <EditText
            android:id="@+id/registerName"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:hint="@string/type_your_name"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="225dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:importantForAutofill="no"/>
    <EditText
            android:id="@+id/registerLastName"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:hint="@string/type_your_last_name"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="290dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:importantForAutofill="no"/>
    <EditText
            android:id="@+id/registerPasswordFirst"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:hint="@string/type_your_password"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="355dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:importantForAutofill="no"/>
    <EditText
            android:id="@+id/registerPasswordSecond"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:hint="@string/repeat_your_password"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="420dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:importantForAutofill="no"/>
    <Button
            android:id="@+id/registerButtonRegister"
            android:text="@string/register"
            android:textSize="18sp"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="520dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"/>
    <Button
            android:id="@+id/registerButtonLogin"
            android:text="@string/i_already_have_account"
            android:textSize="16sp"
            android:layout_width="220dp"
            android:layout_height="66dp"
            android:layout_marginTop="580dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"/>
</RelativeLayout>